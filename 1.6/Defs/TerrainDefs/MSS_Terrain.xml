<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <TerrainAffordanceDef>
    <defName>MSS_GravSpace</defName>
    <label>Gravspace</label>
    <order>2400</order>
  </TerrainAffordanceDef> 

  <TerrainDef ParentName="NaturalTerrainBase">
    <defName>MSS_GravSpace</defName>
    <label>Gravspace</label>
    <uiIconPath>MSSGravSpace</uiIconPath>
    <cropIcon>false</cropIcon>
    <designationCategory>Odyssey</designationCategory>
    <description>Gravspace is the navigable, stabilised area of space that occurs in the presence of a grav-core powered structure. Pawns can use their momentum or in-built Vacsuit propulsion to slowly drift through it.</description>
    <fertility>0</fertility>
    <edgeType>Hard</edgeType>
    <renderPrecedence>300</renderPrecedence>
    <dontRender>true</dontRender>
    <exposesToVacuum>true</exposesToVacuum>
    <layerable>false</layerable>
    <pathCost>50</pathCost>
    <avoidWander>true</avoidWander>
    <holdSnowOrSand>false</holdSnowOrSand>
    <preventCraters>true</preventCraters>
    <filthAcceptanceMask>
      <li>None</li>
    </filthAcceptanceMask>
    <statBases>
      <Flammability>0</Flammability>
      <WorkToBuild>50</WorkToBuild>
    </statBases>
    <tags>
      <li>Space</li>
    </tags>
    <affordances>
      <li>Bridgeable</li>
      <li>GravSpace</li>
      <li MayRequire="rashomcree.odyssey.orbitalplatforms">VoidSpace</li>
    </affordances>
    <terrainAffordanceNeeded>Bridgeable</terrainAffordanceNeeded>
    <spaceEdgeGraphicData IsNull="True" />
    <canBePolluted>false</canBePolluted>
  </TerrainDef>
</Defs>